if [ -f ~/dcutil/dan_dot/aliases.sh ]; then
    . ~/dcutil/dan_dot/aliases.sh
fi

## Set up environment variables
if [ -f ~/dcutil/env.sh ]; then
    . ~/dcutil/env.sh
fi
